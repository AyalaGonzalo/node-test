<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />

		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="../css/cart-style.css" />
		<title>Carrito</title>
	</head>
	<body>
		
		<main>
			<section>
				<div class="cart_title">
					<h2>CARRITO DE COMPRAS</h2>
				</div>
				<div class="cart_products_title_container">
					<div class="cart_products_title_container_item1">
						<p>DETALLE DE PRODUCTO</p>
					</div>
					<div class="cart_products_title_container_item2">
						<p>CANTIDAD</p>
					</div>
					<div class="cart_products_title_container_item3">
						<p>TOTAL</p>
					</div>
				</div>

				<div
					class="cart_products_detail"
					style="
						display: grid;
						grid-template-columns: 1.2fr 1fr 1fr 1fr;
						border: solid 1px black;
						align-items: center;
					"
				>
					<picture>
						<img
							src="../assets/multimedia/star-wars/baby-yoda-1.webp"
							alt=""
							width="300vw"
						/>
					</picture>

					<div>
						<h3>BABY YODA BLUEBALL</h3>
						<p>star wars</p>
						<p>precio: $ 1799,99</p>
					</div>
					<div>
						<input type="number" name="cantidad" id="" value="0" />
					</div>
					<div>
						<p>$ 3599,98</p>
					</div>
				</div>
				<!-- <div> -->
				<!-- <div style="text-align: right;margin-right: 25em;">
                        <h2>Resumen</h2>
                    </div> -->

				<div
					style="
						display: grid;
						grid-template-columns: 60% 30% 10%;
						grid-template-rows: 10% 90%;
					"
				>
					<div style="grid-column-start: 2">
						<h3 style="margin: 0">Resumen</h3>
					</div>
					<div class="resume_payment">
						<div class="resume_payment_table">
							<p>Cantidad de Elementos</p>
						</div>
						<div class="resume_payment_table"><p>3</p></div>
						<div class="resume_payment_table"><p>Subtotal</p></div>
						<div class="resume_payment_table"><p>$ 3599,98</p></div>
						<div class="resume_payment_table"><p>Envio</p></div>
						<div class="resume_payment_table"><p>$ 0,00</p></div>
						<div class="resume_payment_table"><h3>Total</h3></div>
						<div class="resume_payment_table"><p>$ 3599,98</p></div>
					</div>
					<!-- </div> -->
					<div class="button_payment">
						<input type="button" value="Ir a Pagar" />
					</div>
				</div>
			</section>
		</main>
		
	</body>
</html>